<%= render(CardComponent.new(
  title: "Code",
  header: @company.company_name,
  width: "w-full mb-12 xl:mb-0 px-4")) do %>
  <%= turbo_frame_tag 'code' do %>

    <p id="notice"><%= notice %></p>

    <p>
      <strong>Company name:</strong>
      <%= @company.company_name %>
    </p>

    <p>
      <strong>Billing code:</strong>
      <%= @company.billing_code %>
    </p>

    <p>
      <strong>User:</strong>
      <%= @company.user_id %>
    </p>

    <div class="container">
      <div class="m-10 ">
        <%= link_to 'Edit', edit_company_path(@company), class: 'bg-green-600 text-white hover:bg-green-500 text-sm font-bold uppercase px-6 py-3 rounded shadow hover:shadow-lg outline-none focus:outline-none mr-1 mb-1 w-full ease-linear transition-all duration-150' %>
      </div>
      <div class="m-10 ">
        <%= link_to 'Delete', @company, method: :delete, data: { confirm: "Are you sure you want to delete this company? Doing so will also delete any associated codes and tickets." },
                    class: 'bg-red-500 text-white hover:bg-red-400 text-sm font-bold uppercase px-6 py-3 rounded shadow hover:shadow-lg outline-none focus:outline-none mr-1 mb-1 w-full ease-linear transition-all duration-150' %>
      </div>

    </div>
  <% end %>
  <div class="container">
    <div class="m-10 ">
      <%= link_to 'All Companies', companies_path, class: 'bg-gray-500 text-white hover:bg-gray-400 text-sm font-bold uppercase px-6 py-3 rounded shadow hover:shadow-lg outline-none focus:outline-none mr-1 mb-1 w-full ease-linear transition-all duration-150' %>
    </div>
  </div>
<% end %>


