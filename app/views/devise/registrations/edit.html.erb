
  <p id="notice"><%= notice %></p>
    <div class="container mx-auto px-4 h-full">
      <div class="flex content-center items-center justify-center h-full">
        <div class="w-full lg:w-6/12 px-4">
          <div
            class="relative flex flex-col min-w-0 break-words w-full mb-6 shadow-lg rounded-lg bg-white border-0"
          >

            <div class="flex-auto px-4 lg:px-10 py-10 pt-2">
              <div class="text-gray-800 text-center mb-3 font-bold">
                Edit Profile
              </div>
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>
                <div class="relative w-full mb-3">
                  <%= f.label :email, class: 'block uppercase text-gray-600 text-xs font-bold mb-2' %>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'border px-3 py-3 placeholder-gray-300 text-gray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150' %>
                </div>

                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                <% end %>

                <div class="relative w-full mb-3">
                  <%= f.label :password, "New Password", class: 'block uppercase text-gray-600 text-xs font-bold ' %> <i class="text-sm text-gray-600">(leave blank if you don't want to change it)</i><br />
                  <%= f.password_field :password, autocomplete: "new-password", class: 'border px-3 py-3 placeholder-gray-300 text-gray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150' %>
                  <% if @minimum_password_length %>
                    <br />
                    <em class="text-sm text-gray-600"><%= @minimum_password_length %> characters minimum</em>
                  <% end %>
                </div>

                <div class="relative w-full mb-3">
                  <%= f.label :password_confirmation, "Confirm Password", class: 'block uppercase text-gray-600 text-xs font-bold -mb-3' %><br />
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'border px-3 py-3 placeholder-gray-300 text-gray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150' %>
                </div>

                <div class="relative w-full mb-3">
                  <%= f.label :password, "Current Password", class: 'block uppercase text-gray-600 text-xs font-bold mb-2' %>
                  <%= f.password_field :password, autocomplete: "new-password", class: 'border px-3 py-3 placeholder-gray-300 text-gray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150' %>
                </div>

                <div class="actions text-center mt-6">
                  <%= f.submit "Submit", class: 'bg-gray-700 text-white hover:bg-gray-500 active:bg-gray-500 text-sm font-bold uppercase px-6 py-3 rounded shadow hover:shadow-lg outline-none focus:outline-none mr-1 mb-1 w-full ease-linear transition-all duration-150' %>
                </div>
              <% end %>

            <br/>

              <%= button_to "Delete my account", registration_path(resource_name),
                                        data: { confirm: "Are you sure?" }, method: :delete,
                                        class: 'bg-red-600 text-white active:bg-red-400 hover:bg-red-400 text-sm font-bold uppercase px-6 py-3 rounded shadow hover:shadow-lg outline-none focus:outline-none mr-1 mb-1 w-full ease-linear transition-all duration-150' %>


            </div>
          </div>
        </div>
      </div>
    </div>

<div class="container">
  <div class="m-10 float-right">
    <%= link_to 'Back', :back, class: 'bg-gray-500 text-white hover:bg-gray-400 text-sm font-bold uppercase px-6 py-3 rounded shadow hover:shadow-lg outline-none focus:outline-none mr-1 mb-1 w-full ease-linear transition-all duration-150' %>
  </div>
</div>

